@model IEnumerable<periodo_academico.Models.Aluno>

@{
    ViewBag.Title = "Index";
}
<style>
    #links{
        margin-top: 30px;
    }
</style>
<div id="links">
    <p class="d-inline-flex">
        @Html.ActionLink("Gerar Alunos", "GerarAlunos", null, new { @class = "btn btn-dark" })
    </p>
    <p class="d-inline-flex">
        @Html.ActionLink("Deletar Alunos", "DeletarTudo", null, new { @class = "btn btn-dark" })
    </p>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Turma.TurmaId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Turma.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
       
    </tr>
}

</table>
